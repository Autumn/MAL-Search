<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView
      android:id="@+id/info_title"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"/>
    <TextView
      android:id="@+id/info_type"
      android:layout_below="@+id/info_title"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"/>
    <TextView
      android:id="@+id/info_episodes"
      android:layout_below="@+id/info_type"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"/>
    <TextView
      android:id="@+id/info_synopsis"
      android:maxLines="100"
      android:layout_below="@+id/info_episodes"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"/>
    <TextView
      android:layout_below="@+id/info_synopsis"
      android:id="@+id/info_members_score"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"/>
    <TextView
      android:id="@+id/info_start_date"
      android:layout_below="@+id/info_members_score"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"/>
    <TextView
      android:id="@+id/info_end_date"
      android:layout_below="@+id/info_start_date"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"/>
    <TextView
      android:id="@+id/info_classification"
      android:layout_below="@+id/info_end_date"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"/>
</RelativeLayout>

